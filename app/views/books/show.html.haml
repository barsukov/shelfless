- model_class = Book
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @book.title
%p
  %strong= model_class.human_attribute_name(:postcode) + ':'
  %br
  = @book.postcode
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @book.status
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @book.category_id
%p
  %strong= model_class.human_attribute_name(:author_id) + ':'
  %br
  = @book.author_id
%p
  %strong= model_class.human_attribute_name(:account_id) + ':'
  %br
  = @book.account_id


= link_to t('.back', :default => t("helpers.links.back")), books_path, :class => 'btn btn-default'
