- model_class = Book
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%ul.nav.nav-pills
  %li{:role=>"presentation"}
    = link_to books_path do
      %i.icon-th-list
      %span List
  %li{:role=>"presentation"}
    = link_to new_account_book_path(current_user) do
      %i.icon-th-list
      %span.label.label-success Add new book

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:postcode)
      %th= model_class.human_attribute_name(:share)
      %th= model_class.human_attribute_name(:swap)
      %th= model_class.human_attribute_name(:category)
      %th= model_class.human_attribute_name(:author)
      %th= model_class.human_attribute_name(:contact)
  %tbody
    - @books.each do |book|
      %tr
        %td= link_to(book.title, book_path(book))
        %td= book.postcode
        %td
          =get_boolean_icon(book.share)
        %td
          =get_boolean_icon(book.swap)
        %td= book.category.try(:name)
        %td= book.author.try(:name)
        %td
          -if user_signed_in?
            = mail_to book.account.try(:user).try(:email),book.account.try(:name)
          -else
            =I18n.t('login_please')

