= simple_form_for @book, :url => account_books_path, :method => :post, :html => { :class => 'form-vertical' } do |f|
  = f.input :title
  = error_span(@book[:title])
  = f.input :postcode
  = error_span(@book[:postcode])
  = f.simple_fields_for :author, @book.build_author do |t|
    = t.hidden_field :_type, value: t.object.class.name
    = t.input :name, label: I18n.t('book.author')
  = f.simple_fields_for :category, @book.build_category do |t|
    = t.hidden_field :_type, value: t.object.class.name
    = t.input :name, label: I18n.t('book.category')
  = error_span(@book[:author])
  = f.input :state, :collection => [[0, I18n.t('book.shared')],[1, I18n.t('book.unshared')]],label_method: :last, value_method: :first, :as => :radio_buttons
  = f.input :account_id, :as => :hidden, :input_html => { :value => current_user.account.id }
  = f.button :submit, :class => 'btn-success'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), account_books_path(@account), :class => 'btn btn-default'
