<%= content_for :login_panel_title do %>
  <%= I18n.t('devise.resend') %>
<% end %>
<%= content_for :login_panel_content do %>
  <%= simple_form_for(resource, as: resource_name, url: user_confirmation_url) do |f| %>

    <div class="field">
      <%= f.input :email, placeholder: 'Email' %>
    </div>

    <div class="controls">
      <%= f.button :submit, I18n.t('devise.resend'),class: "btn btn-block btn-lg btn-primary btn-loading" %>
    </div>
  <% end %>
<% end %>
