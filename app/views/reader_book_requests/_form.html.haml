= simple_form_for @book_request, :url => account_reader_book_requests_path, :method => :post do |f|
  = f.input :title
  = error_span(@book_request[:title])
  = f.input :author
  = error_span(@book_request[:author])
  = f.input :postcode
  = error_span(@book_request[:postcode])
  = f.input :category
  = error_span(@book_request[:category])
  = f.input :holder_name
  = error_span(@book_request[:holder_name])
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), books_path, :class => 'btn btn-default'
