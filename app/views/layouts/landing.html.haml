!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = csrf_meta_tags
    %title= content_for?(:title) ? yield(:title) : "Shelfless"
    = stylesheet_link_tag "main", :media => "all"
    = javascript_include_tag "application"
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic", :rel => "stylesheet", :type => "text/css"}
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  %body
    / Navigation
    %nav.navbar.navbar-default.navbar-fixed-top.topnav{:role => "navigation"}
      .container.topnav
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand.topnav{:href => root_path}
            Shelfless
            %sub
              &beta;
        -if user_signed_in?
          = render partial: 'shared/navigation'
        -else
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav.navbar-right
              %li
                %a{:href => "#"} About
              %li
                %a{:href => "#services"} Sharing
              %li
                %a{:href => "#contact"} Contact
        / /.navbar-collapse
      / /.container
    / Header
    %a{:name => "about"}
    .intro-header
      .container
        .row
          .col-lg-12
            .intro-message
              %h1 Shelfless
              %h3 A Shared library in Germany
              %hr.intro-divider
                %ul.list-inline.intro-social-buttons
                  %li
                    %a.btn.btn-default.btn-lg{:href => "#services"}
                      %i.fa.fa-angle-double-down.fa-lg.fa-fw
                      %span.network-name
                        = I18n.t("landing_text.read_about")
                  %li
                    -if user_signed_in?
                      =link_to "",
                        onclick: "history.replaceState(null, null, 'single_page_application/books'); history.go();",
                        class: "btn btn-default btn-lg" do
                        %i.fa.fa-facebook.fa-lg.fa-fw
                        %span.network-name Login
                    -else
                      %a.btn.btn-default.btn-lg{:href => new_user_session_path}
                        %i.fa.fa-facebook.fa-lg.fa-fw
                        %span.network-name Login
      / /.container
    / /.intro-header
    / Page Content
    %a{:name => "services"}
    .content-section-a
      .container
        .row
          .col-lg-5.col-sm-6
            %hr.section-heading-spacer
              .clearfix
              %h2.section-heading
                =I18n.t('landing_text.first_step_title')
              %p.lead=I18n.t('landing_text.first_step')
          .col-lg-5.col-lg-offset-2.col-sm-6
            %img.img-responsive{:alt => "", :src => asset_url('images/search.jpg')}
      / /.container
    / /.content-section-a
    .content-section-b
      .container
        .row
          .col-lg-5.col-lg-offset-1.col-sm-push-6.col-sm-6
            %hr.section-heading-spacer
              .clearfix
              %h2.section-heading
                =I18n.t('landing_text.second_step_title')
              %p.lead=I18n.t('landing_text.second_step')
          .col-lg-5.col-sm-pull-6.col-sm-6
            %img.img-responsive{:alt => "", :src => asset_url('images/meet.jpg') }
      / /.container
    / /.content-section-b
    .content-section-a
      .container
        .row
          .col-lg-5.col-sm-6
            %hr.section-heading-spacer
              .clearfix
              %h2.section-heading
                =I18n.t('landing_text.third_step_title')
              %p.lead=I18n.t('landing_text.third_step')
          .col-lg-5.col-lg-offset-2.col-sm-6
            %img.img-responsive{:alt => "", :src => asset_url('images/return.jpg')}
      / /.container
    %aside.bg-dark.content-section-b
      .container.text-center
        .call-to-action
          %h2
            = I18n.t('landing_text.search_book')
          -if user_signed_in?
            =link_to "",
              onclick: "history.replaceState(null, null, 'single_page_application/books'); history.go();",
              class: "btn btn-default btn-lg" do
              %i.fa.fa-book.fa-fw
              %span.network-name Try it
          -else
            %a.btn.btn-default.btn-lg{:href => new_user_session_path}
              %i.fa.fa-book.fa-fw
              %span.network-name Try it
    / /.content-section-a
    %section#contact
      .container
        .row
          .col-lg-8.col-lg-offset-2.text-center
            %h2.section-heading Let's Get In Touch!
            %hr.primary
              %p Have a questions? That's great! Give us a call or send us an email and we will get back to you as soon as possible!
          .col-lg-4.col-lg-offset-2.text-center
            %i.fa.fa-phone.fa-3x.wow.bounceIn{:style => "visibility: visible; animation-name: bounceIn; -webkit-animation-name: bounceIn;"}
            %p +49 176 47325317
          .col-lg-4.text-center
            %i.fa.fa-envelope-o.fa-3x.wow.bounceIn{"data-wow-delay" => ".1s", :style => "visibility: visible; animation-delay: 0.1s; -webkit-animation-delay: 0.1s; animation-name: bounceIn; -webkit-animation-name: bounceIn;"}
            %p
              %a{:href => "mailto:feedback@shelfless.io"} feedback@shelfless.io
